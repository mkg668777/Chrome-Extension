{
  "manifest_version": 3,
  "name": "Voice Command Extension",
  "version": "1.0",
  "description": "A simple Chrome extension for voice commands.",
  "icons": {
    "16": "icons/icon16.jpg",
    "48": "icons/icon48.jpg",
    "128": "icons/icon128.jpg"
  },
  "content_scripts": [
    {  
      "js": ["scripts/content.js"],
      "css": ["scripts/content.css"],
      "matches": ["*://*/*"]
    }
  ],
  "permissions": ["activeTab"],
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icons/icon16.jpg",
      "48": "icons/icon48.jpg",
      "128": "icons/icon128.jpg"
    }
  }
}
